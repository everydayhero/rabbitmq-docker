#!/bin/bash

set -e

WATCHER_PID=""

if [ -n "$STATSD_HOST" ]; then
  printf "Starting rabbitmq statsd watcher..."
  rabbitmq-watcher --host $STATSD_HOST &
  WATCHER_PID=$!
  if [ -z $? ]; then
    echo "failed"
  else
    echo ""
  fi
fi

rabbitmq-server

if [ -n "$WATCHER_PID" ]; then
  echo "Stopping rabbitmq statsd watcher"
  kill $WATCHER_PID 2> /dev/null
fi

