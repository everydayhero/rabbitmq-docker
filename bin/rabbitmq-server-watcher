#!/bin/bash

set -e

RABBITMQ_PORT=5672

if [ -n "$STATSD_HOST" ]; then
  rabbitmq-server &

  if [ -z $? ]; then
    echo "rabbitmq failed to start"
    exit 1
  fi

  echo "waiting for rabbitmq to start"
  while ! nc -z localhost $RABBITMQ_PORT; do
    sleep 0.1 # wait for 1/10 of the second before check again
  done

  rabbitmq-watcher --host $STATSD_HOST
  if [ $? -ne 0 ]; then
    echo "rabbitmq watcher failed to start"
  fi
else
  rabbitmq-server
fi

